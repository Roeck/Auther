<div class="txt-shine">
  <div class="big-text">
    Edit <%= @user.email %>
  </div>
</div>
<br />

<div class="card text-white bg-dark", style="padding: 3%;">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        Prohibited this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <!-- EDIT USERNAME -->
  <%= f.label :name, "Name:" %>
  <br />
  <%= f.text_field :name %>
  <br /><br />

  <!-- EDIT ROLE -->
  Role:
  <br />
  <% User::ROLES.each do |role| %>
    <label>
      <%= f.check_box role %>
      <%= role.to_s.humanize %>
    </label>
    <br>
  <% end %>
  <br />
  <%= f.button :Submit, :class => "btn btn-primary" %>
  <%= link_to "Cancel", user_path(@user), :class => "btn btn-secondary" %>
 <% end %>
</div>