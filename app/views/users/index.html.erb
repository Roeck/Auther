<div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
    <thead>
    <th class="h1" style="color: grey; text-align: center;">All Users (<%= @users.size %>)</th>
    <tr>
        <th>ID:</th>
        <th>Email:</th>
        <th>Confirmed?</th>
        <th>Banned?</th>
        <th>Name</th>
        <th>Image</th>
        <th>Role(s)</th>
        <th colspan="3"></th>
    </tr>
    </thead>
    
    <tbody>
       
        <% @users.each do |user| %>
            <tr>
                <td><%= link_to user.id, user_path(user), :class => "btn btn-sm btn-outline-secondary" %>
                <td><%= user %></td>
                <td><%= user.confirmed? %></td>
                <td><%= user.access_locked? %></td>
                <td><%= user.name %></td>
                <td>
                    <% if user.image.present? %>
                        <%= image_tag user.image, size: "30x30" %>
                    <% end %>
                </td>
                <td><%= user.active_roles.join(", ") %></td>
                <td>
                <% if current_user.admin? %>
                    <!-- EDIT ROLES -->
                    <%= link_to "Edit Role", edit_user_path(user), :class => "btn btn-sm btn-outline-secondary" %>

                    <!-- BAN USER -->
                    <%= link_to ban_status(user), ban_user_path(user), method: :patch, :class => "btn btn-sm btn-outline-danger" %>
                    <br /><br />

                    <!-- DELETE USER -->
                    <%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-sm btn-outline-danger" %>
                    <br />
                <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>